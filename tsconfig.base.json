{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS", 
		"lib": [
			"esnext"
		],
		"sourceMap": true,
		"moduleResolution": "Node",
		"strictNullChecks": true,
		"removeComments": false,
		"declaration": true,
		"outDir": "./built/lib/",
		"declarationDir": "./built/t/",
		"declarationMap": false,
		"preserveWatchOutput": true,
		"emitDeclarationOnly": false,
		"alwaysStrict": true,
		"diagnostics": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"listFiles": true,
		"pretty": false,
		"noEmitOnError": true,
		"forceConsistentCasingInFileNames": true,
		//"rootDir": "./src", 禁用，否则会导致tsc編譯的文件夾結構不正確：/built/lib/src/...
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": true
	}, 
}
